<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/banner1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.92"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:theme="@style/ToolbarStyle"
                            android:visibility="visible">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/toolbar_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/biko_bold_700"
                                android:gravity="center"
                                android:text="All Prayer"
                                android:textColor="@color/grey"
                                android:textSize="18dp" />
                        </androidx.appcompat.widget.Toolbar>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.08"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.45">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:id="@+id/llBg"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_img_day">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:padding="15dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentTop="true"
                                                android:layout_centerHorizontal="true">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:id="@+id/tvCurrentLocation"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_weight="1"
                                                        android:fontFamily="@font/biko_bold_700"
                                                        android:text="Kayseri Türkiye"
                                                        android:textAlignment="textEnd"
                                                        android:textColor="@color/white"
                                                        android:textSize="16dp" />
                                                </LinearLayout>
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                android:layout_centerHorizontal="true"
                                                android:orientation="vertical">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:id="@+id/tvISEnDate"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_weight="1"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="1444 - Ramadhan - 29"
                                                        android:textColor="@color/white"
                                                        android:textSize="18dp" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="5dp">

                                                    <TextView
                                                        android:id="@+id/tvENDate"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_weight="1"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="20-April-2023"
                                                        android:textColor="@color/green" />

                                                    <TextView
                                                        android:id="@+id/tvISARDate"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="1444-رمضان-29"
                                                        android:textAlignment="textEnd"
                                                        android:textColor="@color/green" />
                                                </LinearLayout>
                                            </LinearLayout>
                                        </RelativeLayout>
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:layout_weight="0.3"
                                android:orientation="vertical">

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:id="@+id/llFajr"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:padding="12dp"
                                                android:paddingStart="15dp"
                                                android:paddingEnd="15dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="15dp"
                                                    android:layout_weight="1"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Fajr"
                                                        android:textColor="@color/grey"
                                                        android:textSize="18dp" />

                                                    <TextView
                                                        android:id="@+id/tvTimeLeftFajr"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Upnext 00:00:00"
                                                        android:textColor="@color/green" />
                                                </LinearLayout>

                                                <TextView
                                                    android:id="@+id/tvFajr"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginEnd="15dp"
                                                    android:fontFamily="@font/biko_regular_400"
                                                    android:gravity="center"
                                                    android:text="00:00"
                                                    android:textColor="@color/grey"
                                                    android:textSize="18dp" />

                                                <ImageView
                                                    android:id="@+id/ivFajr"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/ic_sound_on" />
                                            </LinearLayout>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="#d9d9d9" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:padding="12dp"
                                                android:paddingStart="15dp"
                                                android:paddingEnd="15dp">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginEnd="15dp"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/biko_regular_400"
                                                    android:text="Sunrise"
                                                    android:textColor="@color/grey"
                                                    android:textSize="18dp" />

                                                <TextView
                                                    android:id="@+id/tvSunrise"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginEnd="15dp"
                                                    android:fontFamily="@font/biko_regular_400"
                                                    android:gravity="center"
                                                    android:text="00:00"
                                                    android:textColor="@color/grey"
                                                    android:textSize="18dp" />

                                                <ImageView
                                                    android:id="@+id/ivSunrise"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/ic_sound_on" />
                                            </LinearLayout>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="#d9d9d9" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:id="@+id/llDuhur"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:padding="12dp"
                                                android:paddingStart="15dp"
                                                android:paddingEnd="15dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="15dp"
                                                    android:layout_weight="1"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Duhur"
                                                        android:textColor="@color/grey"
                                                        android:textSize="18dp" />

                                                    <TextView
                                                        android:id="@+id/tvTimeLeftDurur"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Upnext 00:00:00"
                                                        android:textColor="@color/green" />
                                                </LinearLayout>

                                                <TextView
                                                    android:id="@+id/tvDurur"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginEnd="15dp"
                                                    android:fontFamily="@font/biko_regular_400"
                                                    android:gravity="center"
                                                    android:text="00:00"
                                                    android:textColor="@color/grey"
                                                    android:textSize="18dp" />

                                                <ImageView
                                                    android:id="@+id/ivDurur"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/ic_sound_on" />
                                            </LinearLayout>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="#d9d9d9" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:id="@+id/llAsr"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:padding="12dp"
                                                android:paddingStart="15dp"
                                                android:paddingEnd="15dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="15dp"
                                                    android:layout_weight="1"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Asr"
                                                        android:textColor="@color/grey"
                                                        android:textSize="18dp" />

                                                    <TextView
                                                        android:id="@+id/tvTimeLeftAsr"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Upnext 00:00:00"
                                                        android:textColor="@color/green" />
                                                </LinearLayout>

                                                <TextView
                                                    android:id="@+id/tvAsr"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginEnd="15dp"
                                                    android:fontFamily="@font/biko_regular_400"
                                                    android:gravity="center"
                                                    android:text="00:00"
                                                    android:textColor="@color/grey"
                                                    android:textSize="18dp" />

                                                <ImageView
                                                    android:id="@+id/ivAsr"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/ic_sound_on" />
                                            </LinearLayout>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="#d9d9d9" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:id="@+id/llMaghrib"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:padding="12dp"
                                                android:paddingStart="15dp"
                                                android:paddingEnd="15dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="15dp"
                                                    android:layout_weight="1"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Maghrib"
                                                        android:textColor="@color/grey"
                                                        android:textSize="18dp" />

                                                    <TextView
                                                        android:id="@+id/tvTimeLeftMaghrib"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Upnext 00:00:00"
                                                        android:textColor="@color/green" />
                                                </LinearLayout>

                                                <TextView
                                                    android:id="@+id/tvMaghrib"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginEnd="15dp"
                                                    android:fontFamily="@font/biko_regular_400"
                                                    android:gravity="center"
                                                    android:text="00:00"
                                                    android:textColor="@color/grey"
                                                    android:textSize="18dp" />

                                                <ImageView
                                                    android:id="@+id/ivMaghrib"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/ic_sound_on" />
                                            </LinearLayout>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="#d9d9d9" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:id="@+id/llIsha"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:padding="12dp"
                                                android:paddingStart="15dp"
                                                android:paddingEnd="15dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="15dp"
                                                    android:layout_weight="1"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Isha"
                                                        android:textColor="@color/grey"
                                                        android:textSize="18dp" />

                                                    <TextView
                                                        android:id="@+id/tvTimeLeftIsha"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/biko_regular_400"
                                                        android:text="Upnext 00:00:00"
                                                        android:textColor="@color/green" />
                                                </LinearLayout>

                                                <TextView
                                                    android:id="@+id/tvIsha"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginEnd="15dp"
                                                    android:fontFamily="@font/biko_regular_400"
                                                    android:gravity="center"
                                                    android:text="00:00"
                                                    android:textColor="@color/grey"
                                                    android:textSize="18dp" />

                                                <ImageView
                                                    android:id="@+id/ivIsha"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/ic_sound_on" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </ScrollView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:gravity="center">

                                <LinearLayout
                                    android:id="@+id/btnPrayerSetting"
                                    android:layout_width="150dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/round_corner_square_5"
                                    android:gravity="center_vertical"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_prayer_setting" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/biko_regular_400"
                                        android:text="Prayer Setting "
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/white" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center" />

    </RelativeLayout>

</RelativeLayout>
