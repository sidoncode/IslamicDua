<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_corner_square"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/ltwhite">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Location On"
                android:fontFamily="@font/biko_bold_700" />

            <TextView
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="This app required turn on location to get prayer time."
                android:fontFamily="@font/biko_regular_400" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/btnOk"
                android:background="@drawable/round_corner_square"
                android:layout_width="180dp"
                android:layout_height="40dp">

                <TextView
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="OK, Allow Permission"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/biko_regular_400" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
