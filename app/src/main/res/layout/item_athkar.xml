<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_corner_square_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:backgroundTint="@color/ltwhite">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llArabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/grey"
                    android:id="@+id/tvAthkarArabic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/biko_regular_400" />

                <View
                    android:background="#bebebe"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/grey"
                    android:id="@+id/tvAthkarEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/biko_regular_400" />

                <View
                    android:background="#bebebe"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/grey"
                    android:id="@+id/tvAthkarTranslation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/biko_regular_400" />

                <View
                    android:background="#bebebe"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4">

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_share" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/btnAthkarReadTime"
                    android:background="@drawable/round_border_square_7"
                    android:padding="12dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/grey"
                        android:id="@+id/tvCounting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Counting : "
                        android:fontFamily="@font/biko_regular_400" />

                    <TextView
                        android:textColor="@color/green"
                        android:id="@+id/tvAthkarCounting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/3"
                        android:fontFamily="@font/biko_regular_400" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="end|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4">

                <TextView
                    android:textColor="@color/grey"
                    android:id="@+id/tvAthkarCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111-111"
                    android:fontFamily="@font/biko_regular_400" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
