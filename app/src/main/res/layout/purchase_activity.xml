<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_icon_purchase" />

        <TextView
            android:textColor="@color/ltgrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Welcome"
            android:fontFamily="@font/biko_regular_400" />

        <TextView
            android:textSize="28dp"
            android:textColor="#444f50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Islamic Dua"
            android:fontFamily="@font/kingthings_exeter" />

        <TextView
            android:textSize="12dp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="When you buy premium you get the \nwhole app ADs free"
            android:fontFamily="@font/biko_regular_400" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ads_remove" />

            <TextView
                android:textSize="15dp"
                android:textColor="#d90d0d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Remove All ADs"
                android:fontFamily="@font/biko_regular_400" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/lin_pay"
            android:background="@drawable/round_corner_square_5"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_premium" />

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Get Premium "
                android:fontFamily="@font/biko_bold_700" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/start_bg_img"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:textSize="25dp"
                android:textColor="#d7fffa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Continue for FREE"
                android:fontFamily="@font/biko_regular_400" />

            <TextView
                android:textSize="16dp"
                android:textColor="#1ca498"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:text="Islamic Dua, Quran,\nHajj Journey, Zakat and more."
                android:fontFamily="@font/biko_regular_400" />

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/lin_start"
                android:background="@drawable/round_corner_square_5"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Free"
                    android:layout_weight="1"
                    android:fontFamily="@font/biko_bold_700" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/ltwhite"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="15dp"
                    android:textColor="#444f50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Please Read Our "
                    android:fontFamily="@font/biko_regular_400" />

                <TextView
                    android:textSize="15dp"
                    android:textColor="#2e77e4"
                    android:textColorLink="#2e77e4"
                    android:id="@+id/txt_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Privacy  Policy"
                    android:fontFamily="@font/biko_bold_700" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>
